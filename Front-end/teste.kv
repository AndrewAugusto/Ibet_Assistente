<SobreEsportes>:
    name: 'sobre'
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height


            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 180
                padding: 40

                Button:
                    text:'<'
                    size_hint_y: None
                    size_hint_x: None
                    width: 40
                    height: 40
                    on_release: app.root.MudarMenu()

                Titulo:
                    text: 'Sobre Esportes'
                    size_hint_x: 0.8
                    pos_hint: {'center_x': 0.5}

            Button:
                size_hint_y: None
                height: 60
                text:'Futebol'
                on_release: app.root.Futebol()

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                id: futebol

            
            Button:
                size_hint_y: None
                height: 60
                text:'Volêi'
                on_release: app.root.Volei()
            
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                id: volei

            Button:
                size_hint_y: None
                height: 60
                text:'Basquete'
                on_release: app.root.Basquete()
            
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                id: basquete

            Button:
                size_hint_y: None
                height: 60
                text:'Counter Strike'
                on_release: app.root.Cs()
            
            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                id: cs
