<sm>:
    PaginaInicial:
    Pagina2:

<PaginaInicial>:
    name: 'pinicial'
    BoxLayout:
        orientation:'vertical'
        padding: 100
        spacing:50
        
        Image:
            source: 'img/logo.jpg'
            size_hint_y: None
            height: 100

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Ol√°, para iniciarmos digite seu nome: "

            TextInput:
                id: nome
                multiline: False
        
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: "Digite seu email: "

            TextInput:
                id: email
                multiline: False
        
        Button:
            on_release: app.root.MudarPagina2()
            text: 'Enviar'

<Pagina2>:
    name: 'p2'
    BoxLayout:
        id: box
        orientation: 'vertical'
        padding: 100
        spacing:50
        Label:
            id: nome2
            text: ''
        
        Button:
            text:'Voltar'
            size_hint_y: None
            height: 30
            on_release: app.root.MudarPaginaInicial()